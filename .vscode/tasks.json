{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Preview Changes",
      "type": "shell",
      "command": "npm run dev",
      "problemMatcher": [],
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}/../.."
      }
    },
    {
      "label": "Stop Preview",
      "type": "shell",
      "command": "pkill -f 'vite'",
      "problemMatcher": [],
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}/../.."
      }
    },
    {
      "label": "Push Changes",
      "type": "shell",
      "command": "./.vscode/push-changes.sh \"${input:commitMessage}\"",
      "problemMatcher": [],
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}/../.."
      }
    }
  ],
  "inputs": [
    {
      "id": "commitMessage",
      "type": "promptString",
      "description": "Enter a short commit message"
    }
  ]
}
