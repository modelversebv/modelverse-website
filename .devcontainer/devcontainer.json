{
  "name": "React + TypeScript + MDX Dev",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:22",

  // Start the workspace inside the blogs folder
  "workspaceFolder": "/workspaces/modelverse-website/src/blogs",

  "customizations": {
    "vscode": {
      "extensions": ["esbenp.prettier-vscode"],
      "settings": {
        // Hide everything except /src/blogs in the Explorer
        "files.exclude": {
          "**/*": true,
          "src/blogs/**": false
        },
        "workbench.startupEditor": "none",
        "editor.wordWrap": "on",
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },

  // Install dependencies after the container builds
  "postCreateCommand": "npm ci",

  // Start Vite automatically (optional)
  "postStartCommand": "npm run dev",

  "forwardPorts": [5173],
  "portsAttributes": {
    "5173": {
      "label": "Vite Dev Server",
      "onAutoForward": "openBrowser"
    }
  },

  "remoteUser": "node"
}
