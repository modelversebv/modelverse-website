{
  "name": "React + TypeScript + MDX Dev",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:22",

  "workspaceFolder": "/workspace/modelverse-website/src/blogs",

  "customizations": {
    "vscode": {
      "extensions": ["esbenp.prettier-vscode", "SanaAjani.taskrunnercode"],

      "settings": {
        "files.exclude": {
          "**/*": true,
          "src/blogs": false
        },
        "task.autoDetect": "off",
        "workbench.startupEditor": "none",
        "editor.wordWrap": "on",
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },

  // Install dependencies after the container builds
  "postCreateCommand": "npm ci",

  "forwardPorts": [5173],
  "portsAttributes": {
    "5173": {
      "label": "Vite Dev Server",
      "onAutoForward": "openBrowser"
    }
  },

  "remoteUser": "node"
}
